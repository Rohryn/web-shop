<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_3_0.dtd" >

<web-app>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/webshop</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <display-name>Archetype Created Web Application</display-name>
    <welcome-file-list>
        <welcome-file>/WEB-INF/index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>
            com.epam.com.epam.hrynyshyn.listeners.ApplicationContextListener
        </listener-class>
    </listener>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.epam.com.epam.hrynyshyn.filters.security.SecurityFilter</filter-class>
        <init-param>
            <param-name>configuration</param-name>
            <param-value>src/main/webapp/META-INF/security.xml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CacheDisable</filter-name>
        <filter-class>com.epam.com.epam.hrynyshyn.filters.cache.CacheDisableFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CompressionFilter</filter-name>
        <filter-class>com.epam.com.epam.hrynyshyn.filters.gzip.CompressingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CompressionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>
            com.epam.com.epam.hrynyshyn.filters.locale.LocaleFilter
        </filter-class>
        <init-param>
            <param-name>localeStorageMode</param-name>
            <param-value>sessionLocaleStoring</param-value>
        </init-param>
        <init-param>
            <param-name>defaultLocale</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>locales</param-name>
            <param-value>ru,en</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <!--<filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>
            com.epam.LoginFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/makeOrder</url-pattern>
    </filter-mapping>-->
    <context-param>
        <param-name>captchaStoringMode</param-name>
        <param-value>session</param-value>
    </context-param>
    <context-param>
        <param-name>captchaTimeout</param-name>
        <param-value>120000</param-value>
    </context-param>
    <context-param>
        <param-name>captchaCleanerTimeout</param-name>
        <param-value>180000</param-value>
    </context-param>
    <context-param>
        <param-name>registrationTimeout</param-name>
        <param-value>60000</param-value>
    </context-param>
    <error-page>
        <exception-type>com.epam.com.epam.hrynyshyn.exceptions.TransactionFailureException</exception-type>
        <location>/WEB-INF/server_error_page.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.epam.com.epam.hrynyshyn.exceptions.ProductNotFoundException</exception-type>
        <location>/WEB-INF/client_error_page.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
